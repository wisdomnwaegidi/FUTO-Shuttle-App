                  <label for="choose" class="label_1">One-way</label>

                  <input type="radio" name="myRadio" id="no" class="radio" />
                  <label for="no" class="label_1">Return</label>

                  <input type="radio" name="myRadio" id="maybe" class="radio" />
                  <label for="maybe" class="label_1">Suscribe</label>
                </div>

                <div class="pickdate">
                  <input
                    type="text"
                    name="dateTime"
                    id="datepicker"
                    placeholder="Choose Date and time"
                    class="input_1"
                    onfocus="(this.type='datetime-local')"
                    onblur="(this.type='text')"
                  />
                </div>

                <div class="dflex" id="d-flex">
                  <div class="div1">
                    <label class="label">First Trip</label>
                    <input
                      type="text"
                      size="20"
                      name="date"
                      placeholder="Choose Date"
                      id="first"
                      class="input"
                      onfocus="(this.type='date')"
                      onblur="(this.type='text')"
                    />
                    <label class="label">Second Trip</label>
                    <input
                      type="text"
                      name="text"
                      size="20"
                      placeholder="Choose Date"
                      id="second"
                      class="input"
                      onfocus="(this.type='date')"
                      onblur="(this.type='text')"
                    />
                  </div>
                </div>

                <div class="subscribe" id="subbd">
                  <h3>Subscription Settings</h3>
                  <div class="select__option">
                    <select name="booking" id="booking" class="booking__type">
                      <option value="0" disabled selected hidden id="dis__able">
                        Booking Type
                      </option>
                      <option value="1">One Way</option>
                      <option value="2">Return Trip</option>
                    </select>
                  </div>

                  <div class="time">
