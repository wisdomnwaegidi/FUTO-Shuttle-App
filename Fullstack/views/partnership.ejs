    <section class="drivesinup__section">
      <div class="container drive" id="display__one">
        <div class="drive__h3">
          <i class="fa fa-times" aria-hidden="true" id="close"></i>
          <h3>Driver Sign Up</h3>
        </div>
        <p class="create">Create an account to start driving with Shuttlers</p>
        <div>
          <form action="/submit-form" method="post" id="driversForm">
            <div class="d-flex__1">
              <div class="input__sign__1">
                <label for="">First name</label>
                <input type="text" name="" id="firstName" />
                <span id="span1"></span>
              </div>
              <div class="input__sign__2">
                <label for="">Last name</label>
                <input type="text" name="" id="lastName" />
                <span id="span2"></span>
              </div>
            </div>
            <div>
              <label for="">Email Address</label>
              <input
                type="text"
                name=""
                id="email"
                placeholder="sample@mail.com"
              />
              <span id="span3"></span>
            </div>

            <div>
              <label for="">Phone Number</label>
              <input type="text" name="" id="phone" placeholder="07034344428" />
              <span id="span4"></span>
            </div>

            <div>
              <label for="">Password</label>
              <input
                type="password"
                name=""
                id="sign__password"
                placeholder=""
              />
              <span id="span5"></span>
            </div>

            <div class="check">
              <input
                type="checkbox"
                class="toggle__password"
                id="toggler"
              />Show Password
            </div>

            <button type="submit">Register</button>
          </form>
          <div>
            <p>
              By clicking on "Register", I have read and agreed to shuttlers
              privacy policy
            </p>
          </div>
        </div>
      </div>
    </section>
